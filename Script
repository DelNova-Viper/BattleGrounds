        Text = Color3.fromRGB(255, 255, 255),
        Red = Color3.fromRGB(255, 60, 60)
    }

    -- 1. Mini Button (KÃ¼Ã§Ã¼ltÃ¼ldÃ¼ÄŸÃ¼nde aÃ§Ä±lan buton)
    local MiniFrame = Instance.new("Frame")
